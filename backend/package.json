{
  "name": "student-management-backend",
  "version": "1.0.0",
  "description": "Öğrenci Yönetim Sistemi için Express + TypeScript backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && node -e \"require('fs').mkdirSync('dist/services',{recursive:true}); require('fs').copyFileSync('src/services/smsService.js','dist/services/smsService.js')\"",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:seed": "npx prisma db seed",
    "db:migrate-to-render": "tsx scripts/migrate-local-to-render.ts",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "keywords": [
    "student-management",
    "express",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@google/genai": "^1.39.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "axios": "^1.13.5",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "livekit-server-sdk": "^2.15.0",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.18.0",
    "prisma": "^7.3.0",
    "tsx": "^4.21.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.0",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.16.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
